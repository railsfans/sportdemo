Ext.apply(Ext.form.VTypes,{  
    // function for validation  
    ip: function(ipValue){  
        // just a simple   
        var ipRegex = /^(\d{1,3})(\.\d{1,3}){3}$/i;  
        return ipRegex.test(ipValue);  
    },  
    // default error text  
    ipText: "Not a valid IP, Correct Format is 12.23.2.1",  
    // filter keys, can only type digit and dot  
    ipMask: /[\d\.]/i  
});
